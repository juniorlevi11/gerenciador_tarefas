@page
@model GerenciadorTarefas.Pages.Tasks.ViewAllModel

<h1>Todos os Itens Cadastrados</h1>

<table class="table table-striped">
    <thead>
        <tr>
            <th>ID</th>
            <th>Título</th>
            <th>Descrição</th>
            <th>Data de Vencimento</th>
            <th>Concluído</th>
            <th>Ações</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.Items)
        {
            <tr>
                <td>@item.Id</td>
                <td>@item.Nome</td>
                <td>@item.Descricao</td>
                <td>@item.DueDate.ToString("dd/MM/yyyy")</td>
                <td>@(item.Concluido ? "Sim" : "Não")</td>
                <td>
                    <a asp-page="/Tasks/Edit" asp-route-id="@item.Id" class="btn btn-warning btn-sm">Editar</a>
                    <a asp-page="/Tasks/Delete" asp-route-id="@item.Id" class="btn btn-danger btn-sm">Deletar</a>
                </td>
            </tr>
        }
    </tbody>
</table>

<a asp-page="/Index" class="btn btn-secondary">Voltar</a>
