@page "{id:int}"
@model GerenciadorTarefas.Pages.Tasks.DeleteModel

<h1>Excluir Tarefa</h1>

<p>Tem certeza de que deseja excluir a seguinte tarefa?</p>

<div>
    <strong>Título:</strong> @Model.TaskItem.Title
</div>
<div>
    <strong>Descrição:</strong> @Model.TaskItem.Description
</div>
<div>
    <strong>Data de Vencimento:</strong> @Model.TaskItem.DueDate.ToString("dd/MM/yyyy")
</div>
<div>
    <strong>Concluída:</strong> @(Model.TaskItem.IsCompleted ? "Sim" : "Não")
</div>

<form method="post">
    <button type="submit" class="btn btn-danger">Excluir</button>
    <a asp-page="/Tasks/Index" class="btn btn-secondary">Cancelar</a>
</form>
