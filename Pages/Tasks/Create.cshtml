@page
@model GerenciadorTarefas.Pages.Tasks.CreateModel

<h1>Adicionar Nova Tarefa</h1>

<form method="post">
    <div>
        <label for="Title">Título</label>
        <input type="text" id="Title" name="TaskItem.Title" required />
    </div>
    <div>
        <label for="Description">Descrição</label>
        <textarea id="Description" name="TaskItem.Description"></textarea>
    </div>
    <div>
        <label for="DueDate">Data de Vencimento</label>
        <input type="date" id="DueDate" name="TaskItem.DueDate" required />
    </div>
    <div>
        <label for="IsCompleted">Concluído</label>
        <input type="hidden" name="TaskItem.IsCompleted" value="false" /> <!-- Campo oculto para enviar false -->
        <input type="checkbox" id="IsCompleted" name="TaskItem.IsCompleted" value="true" />
    </div>
    <button type="submit" class="btn btn-primary">Salvar</button>
</form>